{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/api/index.js",
      "methods": ["POST"],
      "headers": {
        "x-vercel-timeout": "120" // افزایش به 120 ثانیه برای عملیات طولانی‌تر
      }
    }
  ],
  "env": {
    "BOT_TOKEN": "",
    "BOT_OWNER": "5059280908",
    "UPDATES_CHANNEL": "",
    "LOG_CHANNEL": "",
    "DOWN_PATH": "./downloads",
    "TIME_GAP": "5",
    "MAX_VIDEOS": "5",
    "STREAMTAPE_API_USERNAME": "",
    "STREAMTAPE_API_PASS": "",
    "MONGODB_URI": "",
    "BROADCAST_AS_COPY": "true",
    "CAPTION_TEMPLATE": "Video Merged by @{botUsername}\\n\\nMade by @Savior_128"
  },
  "installCommand": "npm install && apt-get update && apt-get install -y ffmpeg"
}
